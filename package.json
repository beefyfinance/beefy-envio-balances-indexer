{
  "name": "envio-indexer",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "clean": "tsc --clean",
    "build": "tsc --build",
    "watch": "tsc --watch",
    "codegen": "envio codegen",
    "dev": "envio dev",
    "start": "envio start",
    "stop": "envio stop",
    "deploy": "git checkout prod && git merge origin/main --ff-only && git push && git checkout -",
    "format": "biome check --write --unsafe",
    "format:safe": "biome check --write",
    "db:console": "PGPASSWORD=testing psql -h localhost -p ${ENVIO_PG_PORT:-5433} -U postgres -d envio-dev",
    "test": "pnpm run test:lint && pnpm run test:ts && pnpm run test:unit",
    "test:lint": "biome ci",
    "test:ts": "tsc --noEmit",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest watch"
  },
  "dependencies": {
    "blockchain-addressbook": "0.54.111",
    "envio": "3.0.0-alpha.7",
    "remeda": "2.33.3",
    "viem": "2.44.2"
  },
  "optionalDependencies": {
    "generated": "link:generated"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "lefthook": "2.0.15",
    "tsx": "4.21.0",
    "typescript": "5.9.3",
    "vitest": "4.0.17"
  },
  "engines": {
    "node": ">=24.11.0"
  }
}
