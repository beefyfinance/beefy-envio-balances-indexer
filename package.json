{
  "name": "envio-indexer",
  "version": "0.1.0",
  "scripts": {
    "clean": "tsc --clean",
    "build": "tsc --build",
    "watch": "tsc --watch",
    "mocha": "ts-mocha test/**/*.ts",
    "codegen": "envio codegen",
    "dev": "envio dev",
    "start": "envio start",
    "stop": "envio stop",
    "deploy": "git checkout prod && git merge origin/main --ff-only && git push && git checkout -",
    "format": "biome check --write --unsafe",
    "format:safe": "biome check --write",
    "db:console": "PGPASSWORD=testing psql -h localhost -p 5433 -U postgres -d envio-dev",
    "test": "pnpm run test:unit && pnpm run test:lint && pnpm run test:ts",
    "test:unit": "pnpm mocha",
    "test:lint": "biome ci",
    "test:ts": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/bun": "1.3.3",
    "@types/chai": "4.3.20",
    "@types/mocha": "10.0.6",
    "@types/node": "24.10.1",
    "chai": "4.3.10",
    "lefthook": "1.13.1",
    "mocha": "10.2.0",
    "ts-mocha": "10.0.0",
    "typescript": "5.9.3"
  },
  "dependencies": {
    "blockchain-addressbook": "0.54.103",
    "envio": "2.32.3",
    "remeda": "2.32.0",
    "viem": "2.40.3"
  },
  "optionalDependencies": {
    "generated": "link:generated"
  },
  "engines": {
    "node": ">=18.0.0"
  }
